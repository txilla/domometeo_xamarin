<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DomoMeteoXamarin.Pages.DashboardPage"
             Title="Dashboard">
    <ContentPage.Content>
        <ListView x:Name="EmployeeView" ItemsSource="{Binding ListDataSensors, Mode=TwoWay}" SelectedItem="{Binding YourSelectedItem, Mode=TwoWay}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell Height="40">
                    <ViewCell.ContextActions>
                            <MenuItem Text="Share" Command="{Binding ShareCommand}" />
                    </ViewCell.ContextActions>
                        <StackLayout
                            Margin="20,0,20,0"
                            VerticalOptions="Center"
						    Orientation="Vertical">
                            <StackLayout Orientation="Horizontal">
                                <Label  Text="{Binding Name}"
                                        FontSize="Medium"
								        TextColor="#000000" />
                                <Label  Text="{Binding Data}"
								        FontSize="Medium"
                                        HorizontalOptions="EndAndExpand"
								        TextColor="#000000" />
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>